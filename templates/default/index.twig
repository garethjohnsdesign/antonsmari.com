{% block footer %}
<!-- Desktop Navigation -->
<div class="grid-x grid-padding-x grid-padding-y align-center">

  <div class="small-10 cell">
    <ul class="menu dark-gray align-center">
      {% for block in socials.socials.all() %}
      {% switch block.type %}
        {% case "instagram" %}
          <li class="padding-left"><a href="{{block.socialLink}}" target="_blank">Instagram</a></li>
        {% case "vimeo" %}
          <li><a href="{{block.socialLink}}" target="_blank">Vimeo</a></li>
      {% endswitch %}
      {% endfor %}
    </ul>
  </div>

</div>
<!-- End Desktop Navigation -->
{% endblock %}

